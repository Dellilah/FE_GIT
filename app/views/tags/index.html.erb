<h1>Lista tagów</h1>

<table>
  <tr>
    <th>Nazwa tagu</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= link_to 'Otagowane wydarzenia', tag %></td>
    <% if @current_user && @current_user.admin %>
        <td><%= link_to 'Zmień nazwe', edit_tag_path(tag) %></td>
    <% end %>
    <% if @current_user && @current_user.admin %>
      <td><%= link_to 'Kasuj', tag, confirm: 'Na pewno chcesz usunąć?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nowy tag', new_tag_path %>
